generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  quantity    Int
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
